@using Microsoft.AspNet.Identity


@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
{
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="false">
            @if (User.Identity.IsAuthenticated)
            {
                @User.Identity.GetUserName()
            }
            else
            {
                //@Html.ActionLink("Login", "Login", "Account")
                <a style="display: inline" href="@Url.Action("Login", "Account")">Login</a>
            }

            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a href="@Url.Action("Mine", "Courses")">My Upcoming Courses</a></li>
            <li><a href="@Url.Action("Attending", "Courses")">Course I'm Going</a></li>
            <li><a href="@Url.Action("Following", "Courses")">Lecture I'm flowing</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
            </li>

        </ul>

}